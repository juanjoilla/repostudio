	"item": [
		{
			"name": "1. Autenticación",
			"item": [
				{
					"name": "Login Form (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Login successful\", function () {",
									"    pm.response.to.have.status(302);",
									"});",
									"",
									"if (pm.cookies.has('JSESSIONID')) {",
									"    pm.environment.set('sessionId', pm.cookies.get('JSESSIONID'));",
									"    console.log('Session ID saved:', pm.environment.get('sessionId'));",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "correo",
									"value": "admin@artesluis.com",
									"type": "text"
								},
								{
									"key": "password",
									"value": "admin123",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/login",
							"host": ["{{baseUrl}}"],
							"path": ["login"]
						},
						"description": "Login usando formulario HTML. Retorna 302 y establece cookie JSESSIONID."
					}
				},
				{
					"name": "Login API (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success field\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"    pm.expect(jsonData.usuario).to.have.property('rol');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"correo\": \"admin@artesluis.com\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/usuarios/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "usuarios", "login"]
						},
						"description": "Login vía API REST retornando JSON con datos del usuario."
					}
